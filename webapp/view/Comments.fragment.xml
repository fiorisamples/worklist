<core:FragmentDefinition xmlns:core = "sap.ui.core"
    xmlns="sap.m">
    <Dialog title="{i18n>Note}">
        <content>
            <TextArea id = "idNoteTA" maxLength="130" width="100%" rows="3"/>
        </content>
        <beginButton>
            <Button type ="Accept" text="{i18n>Save}" press= "onSaveCommentsDialog"></Button>
        </beginButton>
        <endButton>
            <Button type ="Reject" text="{i18n>Cancel}" press= "onCommentsCloseDialog"></Button>
        </endButton>
    </Dialog>
</core:FragmentDefinition>